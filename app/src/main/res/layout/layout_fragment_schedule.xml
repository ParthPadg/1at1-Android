<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <org.oneat1.android.util.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:background="@color/darkBlue"
            android:gravity="center|left"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="1@1 is an action amplifier for the advancement of womenâ€™s equality."
            android:textColor="@android:color/white"
            android:textSize="26sp"

            app:typeface="font_futura_regular"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:cardElevation="4dp"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <org.oneat1.android.util.TypefaceTextView
                    android:id="@+id/schedule_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Weekly inspiration and 1-minute videos"
                    android:textColor="@color/cherryRed"
                    android:textSize="16sp"
                    app:typeface="font_helvetica_bold"
                />

                <org.oneat1.android.util.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Hear from effective feminist changemakers offering small steps to build big momentum."
                    android:textColor="@color/darkGray"
                    android:textSize="14sp"
                    app:typeface="font_helvetica_regular"
                />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/schedule_share"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/darkBlue"
                    app:mrl_rippleOverlay="true"
                >

                    <org.oneat1.android.util.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/share"
                        android:text="Spread the word"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:typeface="font_helvetica_regular"
                    />

                </com.balysv.materialripple.MaterialRippleLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <org.oneat1.android.util.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Connect. Spark. Mobilize.\n#1at1action"
                    android:textColor="@color/cherryRed"
                    android:textSize="16sp"
                    app:typeface="font_helvetica_bold"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal" android:weightSum="3">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/schedule_facebook"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/facebook"
                        app:mrl_rippleOverlay="true">

                        <org.oneat1.android.util.TypefaceTextView
                            android:id="@+id/schedule_facebook_inner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/facebook"
                            android:gravity="center"
                            android:text="Facebook"
                            android:textColor="@android:color/white"
                        />
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/schedule_instagram"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/instagram"
                        app:mrl_rippleOverlay="true">

                        <org.oneat1.android.util.TypefaceTextView
                            android:id="@+id/schedule_instagram_inner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ig"
                            android:gravity="center"
                            android:text="Instagram"
                            android:textColor="@android:color/white"
                        />
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/schedule_twitter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/twitter"
                        app:mrl_rippleOverlay="true">

                        <org.oneat1.android.util.TypefaceTextView
                            android:id="@+id/schedule_twitter_inner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/twitter"
                            android:gravity="center"
                            android:text="Twitter"
                            android:textColor="@android:color/white"
                        />
                    </com.balysv.materialripple.MaterialRippleLayout>

                </LinearLayout>

                <org.oneat1.android.util.TypefaceTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:autoLink="all"
                    android:linksClickable="true"
                    android:text="@string/for_more_info"
                    android:textColor="@color/darkGray"
                    android:textSize="14sp"
                    app:typeface="font_helvetica_regular"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>